<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFotoHistorial"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="Foto del vehÃ­culo"/>

        <TextView
            android:id="@+id/txtNombre"
            android:text="Nombre del infractor"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#37474F"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtPatente"
            android:text="Patente: ABC123"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtCausalHistorial"
            android:text="Causal: Exceso de velocidad"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtGravedadHistorial"
            android:text="Gravedad: Grave"
            android:textSize="14sp"
            android:textColor="#616161"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnVerParte"
            android:text="Ver Parte"
            android:textColor="@android:color/white"
            android:backgroundTint="#1976D2"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>