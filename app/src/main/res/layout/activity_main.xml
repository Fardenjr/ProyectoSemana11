<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <!-- Toolbar elegante -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#37474F"
        android:title="AplicacionPartes"
        android:titleTextColor="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Contenedor de botones -->
    <LinearLayout
        android:id="@+id/containerBotones"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botones funcionales -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHacerParte"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Hacer Parte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditarParte"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Editar Parte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminarParte"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Eliminar Parte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#D32F2F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#D32F2F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChatBot"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Chat Bot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerSolicitudes"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Ver Solicitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChat"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Chat en tiempo real"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#37474F"
            android:backgroundTint="#FFFFFF"
            app:strokeColor="#37474F"
            app:strokeWidth="1dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>