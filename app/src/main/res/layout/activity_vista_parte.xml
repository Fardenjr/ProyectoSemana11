<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título -->
        <TextView
            android:id="@+id/tituloParte"
            android:text="Vista del Parte"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Sección: Infractor -->
        <TextView android:text="Datos del infractor" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/txtNombres" android:text="Nombres: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtApellidos" android:text="Apellidos: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtRut" android:text="RUT: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtEdad" android:text="Edad: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Sección: Vehículo -->
        <TextView android:text="Datos del vehículo" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/txtTipoAuto" android:text="Tipo: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtMarca" android:text="Marca: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtModelo" android:text="Modelo: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtPatente" android:text="Patente: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Sección: Infracción -->
        <TextView android:text="Infracción" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/txtCausal" android:text="Causal: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Gravedad -->
        <TextView android:text="Gravedad" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/grupoGravedad"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton android:id="@+id/rbGravisima" android:text="Gravísima" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbGrave" android:text="Grave" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/rbLeve" android:text="Leve" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Foto -->
        <TextView android:text="Fotografía del vehículo" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/fotoVehiculo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"/>

        <!-- Funcionario -->
        <TextView android:text="Funcionario" android:textStyle="bold" android:textColor="#616161"
            android:layout_marginTop="16dp" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <TextView android:id="@+id/txtNombreFuncionario" android:text="Nombre: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtNumeroPlaca" android:text="Placa: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtDepartamento" android:text="Departamento: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/txtLugarPago" android:text="Lugar de pago: " android:textSize="16sp" android:textColor="#212121" android:layout_marginBottom="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>